<% if current_user.present? %>
<%= form_for :profile, :url => {:action => "profile", :controller => "users"}, :html => {:multipart => true} do |f| %>

	<!-- <%= label_tag :name %> -->
	<%= f.text_field :fname, :placeholder => "First Name" %>
	<%= f.text_field :lname, :placeholder => "Last Name" %><br />
	<div class="textarea">
	<%= f.text_area :address_line_1, :placeholder => "Temporary Address" %><br />
	<%= f.text_area :address_line_2, :placeholder => "permanent Address" %><br />
	</div><br />
	<%= f.radio_button :gender, 'Male', :checked => true %> Male
	<%= f.radio_button :gender, 'Female' %> Female<br /><br />
	<%= f.date_select :date_of_birth %><br /><br />
	<%= f.radio_button :marital_status, 'Married', :checked => true %> Married
	<%= f.radio_button :marital_status, 'Unmarried' %> Unmarried<br /><br />
	<%= f.text_field :city, :placeholder => "City" %><br />
	<%= f.text_field :state, :placeholder => "State" %><br />
	<%= f.text_field :country, :placeholder => "Country" %><br />
	<%= f.text_field :pincode, :placeholder => "Pincode" %><br />
	<%= f.text_field :mobile_no, :placeholder => "Phone Number" %><br />
	<%= f.text_field :org_name, :placeholder => "Organisation" %><br />
	<%= f.text_field :designation, :placeholder => "Designation" %><br />
	<%= f.text_field :profession, :placeholder => "Profession" %><br />
	<%= f.file_field :profile_picture %><br />
	<%= f.submit "Save Profile" %>
	
<% end %>
<% end %>
