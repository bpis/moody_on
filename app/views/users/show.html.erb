<div class="row">
  <aside class="span4">
    <section>
    	<% if current_user.profile.profile_picture.present? %>
    		<%= link_to (image_tag @user.profile.profile_picture, :alt => "Profile Picture", :width => 110, :height => 110, :title => "Change?"), new_profile_path %>
        <% else %>
    		<%= link_to image_tag('/images/default_profile_image.png', :alt => "Profile Picture", :width => 110, :height => 110, :title => "change?").to_s, new_profile_path %>
    	<% end %>
      <div class="row">
      	<aside class="span4">
       <%= link_to @user.name %><br />
      Email : 			   <%= @user.email %><br />
      Temporary Address :  <%= @user.profile.address_line_1 %><br />
      Permanent Address :  <%= @user.profile.address_line_2 %><br />
      Gender : 			   <%= @user.profile.gender %><br />
      Date of Birth : 	   <%= @user.profile.date_of_birth %><br />
      Marital Status : 	   <%= @user.profile.marital_status %><br />
      City : 			   <%= @user.profile.city %><br />
      State :  			   <%= @user.profile.state %><br />
      Country : 		   <%= @user.profile.country %><br />
      Pincode : 		   <%= @user.profile.pincode %><br />
      Mobile No. : 		   <%= @user.profile.mobile_no %><br />
      Organisation : 	   <%= @user.profile.org_name %><br />
      Designation : 	   <%= @user.profile.designation %><br />
      Profession :         <%= @user.profile.profession %><br />
      </div>
    </section> 
  </aside>
</div>

